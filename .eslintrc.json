{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": [
        "*.test.js"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ]
    },
    "overrides": [
        {
            "files": [
                "bin/*.js",
                "lib/*.js"
            ],
            "excludedFiles": "*.test.js",
            "rules": {
                "quotes": [
                    "error",
                    "single"
                ]
            }
        }
    ]
}